@model List<Quiz>
@{
	int index = 0;
}

<div class="container">
	<a href="@Url.Action("CreateNewQuiz","Quiz")" class="btn btn-primary">Soru Oluştur</a>
	<hr />
	<table class="table table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Soru Başlığı</th>
				<th>Soru Tarihi</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var quiz in Model)
			{
				index++;
				<tr>
					<td>@index</td>
					<td><a href="/Quiz/AnswerQuiz?id=@quiz.ID">@quiz.Title</a></td>
					<td>@quiz.CreatedDate.ToString("dd.MM.yyyy")</td>
					<td>
						<a href="/Quiz/Delete?id=@quiz.ID" class="btn btn-outline-danger">Sil</a>
					</td>
				</tr>
			}

		</tbody>
	</table>

</div>